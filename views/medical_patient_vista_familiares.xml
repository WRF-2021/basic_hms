<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="medical_info_familia_tree_view" model="ir.ui.view">
            <field name="name">medical.info.familia.tree.view</field>
            <field name="model">patient.familia</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="relative_type" />
                    <field name="fecha_nacimiento" />
                    <field name="occupation" />
                    <field name="gender" />
                    <field name="medical_patient_familia_id" />
                </tree>
            </field>
        </record>

        <record id="medical_info_familia_form_view" model="ir.ui.view">
            <field name="name">medical.info.familia.form.view</field>
            <field name="model">patient.familia</field>
            <field name="arch" type="xml">
                <form string="Info Familia">
                    <group colspan="4" col="4">
                        <field name="name" />
                        <field name="relative_type" />
                        <field name="fecha_nacimiento" />
                        <field name="occupation" />
                        <field name="gender" />
                        <field name="medical_patient_familia_id" />
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
